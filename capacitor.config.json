
{
  "appId": "com.cafri.cropscan",
  "appName": "CAFRI Crop Doctor",
  "webDir": "dist",
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000
    },
    "Camera": {
      "android": {
        "permissions": [
          "android.permission.CAMERA"
        ]
      },
      "ios": {
        "NSCameraUsageDescription": "App needs camera access to identify crop diseases"
      }
    },
    "Permissions": {
      "permissions": ["camera"]
    }
  },
  "server": {
    "cleartext": true
  }
}
